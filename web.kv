<WebScreen>:
    name: "web"
    md_bg_color: app.theme_cls.backgroundColor

    MDBoxLayout:
        orientation: "vertical"
        spacing: "20dp"
        padding: "20dp"

        Widget:

        MDButton:
            style: "tonal"
            on_release: root.open_web()
            pos_hint: {"center_x": .5, "center_y": .5}
            MDButtonIcon:
                icon: "web"

            MDButtonText:
                text: "Open Browser"

        Widget:

        MDButton:
            style: "elevated"
            on_release: root.go_home()

            MDButtonIcon:
                icon: "arrow-left"

            MDButtonText:
                text: "Back"


