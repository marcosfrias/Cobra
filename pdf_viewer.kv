<PDFViewerScreen>:
    name: "reader"
    md_bg_color: app.theme_cls.backgroundColor

    MDBoxLayout:
        orientation: "vertical"
        spacing: "24dp"
        padding: "20dp"

        Widget:

        MDButton:
            style: "tonal"
            on_release: root.open_picker()
            pos_hint: {"center_x": .5, "center_y": .5}
            MDButtonIcon:
                icon: "file-document-plus-outline"

            MDButtonText:
                text: "Open PDF"

        Widget:

        MDButton:
            style: "elevated"
            on_release: root.switch_to_home()

            MDButtonIcon:
                icon: "backspace-outline"

            MDButtonText:
                text: "Back"


